<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PropertyActivity"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txt_propertytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Property Title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Price"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="ADDRESS"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Address"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="DESCRIPTION"
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@android:color/darker_gray" />


    <TextView
        android:id="@+id/txt_propertydescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Property Description"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_propertytype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="1 BHK"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_noofperson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2 Persons"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />


   </LinearLayout>


    <TextView
        android:id="@+id/txt_facilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Facilities"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_depositeprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Deposite Price"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_rentfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Rent For"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@android:color/black" />

</LinearLayout>